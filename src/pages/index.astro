---
/**
 * PairingPlates.com - Homepage
 * 
 * Editorial luxury landing page showcasing the food pairing tools suite.
 */

import BaseLayout from '../components/layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Home"
  description="Discover the art of perfect food and wine pairings. Interactive tools and calculators to elevate your culinary experience."
>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <!-- Decorative Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-cream)] via-[var(--color-parchment)] to-[var(--color-cream-dark)] opacity-50"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-[var(--color-wine)] opacity-[0.03] rounded-bl-[200px]"></div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl">
        <!-- Eyebrow -->
        <div class="flex items-center gap-3 mb-6 animate-fade-in-up">
          <span class="w-12 h-[2px] bg-[var(--color-wine)]"></span>
          <span class="text-sm font-medium uppercase tracking-widest text-[var(--color-wine)]">
            Culinary Intelligence
          </span>
        </div>
        
        <!-- Main Headline -->
        <h1 class="text-display mb-6 animate-fade-in-up stagger-1" style="opacity: 0;">
          <span class="block text-[var(--text-primary)]">Perfect Pairings,</span>
          <span class="block text-accent text-[var(--color-wine)]">Every Plate</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-[var(--text-secondary)] leading-relaxed mb-10 max-w-2xl animate-fade-in-up stagger-2" style="opacity: 0;">
          Discover scientifically-backed flavor combinations, scale recipes with precision, 
          and plan unforgettable gatherings with our suite of culinary tools.
        </p>
        
        <!-- CTAs -->
        <div class="flex flex-wrap gap-4 animate-fade-in-up stagger-3" style="opacity: 0;">
          <a href="/tools" class="btn btn-primary text-lg px-8 py-4">
            Explore All Tools
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </a>
          <a href="/tools/flavor-pairing" class="btn btn-secondary text-lg px-8 py-4">
            Try Flavor Pairing
          </a>
        </div>
      </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute bottom-10 right-10 w-32 h-32 border-2 border-[var(--color-wine)] opacity-10 rounded-full animate-pulse-soft hidden lg:block"></div>
    <div class="absolute top-20 right-40 w-20 h-20 bg-[var(--color-gold)] opacity-10 rounded-full hidden lg:block"></div>
  </section>
  
  <!-- Featured Tools Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <!-- Section Header -->
      <div class="text-center max-w-2xl mx-auto mb-16">
        <span class="badge badge-wine mb-4">Featured Tools</span>
        <h2 class="text-display text-[var(--text-primary)] mb-4">
          Elevate Your Culinary Experience
        </h2>
        <p class="text-lg text-[var(--text-secondary)]">
          From flavor pairing to party planning, our tools help you create memorable dining experiences.
        </p>
      </div>
      
      <!-- Tools Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Tool Card 1 -->
        <a href="/tools/flavor-pairing" class="group card card-elevated hover:border-[var(--color-wine)] border-2 border-transparent">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[var(--color-wine)] to-[var(--color-wine-deep)] flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[var(--color-wine)] transition-colors">
            Flavor Pairing Finder
          </h3>
          <p class="text-[var(--text-secondary)] mb-4">
            Discover unexpected flavor combinations backed by food science. Enter any ingredient to explore perfect pairings.
          </p>
          <span class="text-sm font-medium text-[var(--color-wine)] flex items-center gap-2 group-hover:gap-3 transition-all">
            Explore Pairings
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </span>
        </a>
        
        <!-- Tool Card 2 -->
        <a href="/tools/wine-pairing" class="group card card-elevated hover:border-[var(--color-wine)] border-2 border-transparent">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-purple-600 to-purple-800 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M8 22h8"/>
              <path d="M7 10h10"/>
              <path d="M12 15v7"/>
              <path d="M12 15a5 5 0 0 0 5-5c0-2-.5-4-2-8H9c-1.5 4-2 6-2 8a5 5 0 0 0 5 5Z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[var(--color-wine)] transition-colors">
            Wine & Food Matcher
          </h3>
          <p class="text-[var(--text-secondary)] mb-4">
            Find the perfect wine for any dish, or discover foods that complement your favorite bottle.
          </p>
          <span class="text-sm font-medium text-[var(--color-wine)] flex items-center gap-2 group-hover:gap-3 transition-all">
            Find Pairings
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </span>
        </a>
        
        <!-- Tool Card 3 -->
        <a href="/tools/recipe-scaler" class="group card card-elevated hover:border-[var(--color-wine)] border-2 border-transparent">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[var(--color-sage)] to-green-700 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="18" height="18" x="3" y="3" rx="2"/>
              <path d="M3 9h18"/>
              <path d="M9 21V9"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[var(--color-wine)] transition-colors">
            Recipe Scaler
          </h3>
          <p class="text-[var(--text-secondary)] mb-4">
            Scale any recipe up or down with intelligent fraction conversion and smart rounding.
          </p>
          <span class="text-sm font-medium text-[var(--color-wine)] flex items-center gap-2 group-hover:gap-3 transition-all">
            Scale Recipe
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </span>
        </a>
        
        <!-- Tool Card 4 -->
        <a href="/tools/party-calculator" class="group card card-elevated hover:border-[var(--color-wine)] border-2 border-transparent">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[var(--color-gold)] to-amber-600 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[var(--color-wine)] transition-colors">
            Party Food Calculator
          </h3>
          <p class="text-[var(--text-secondary)] mb-4">
            Calculate exactly how much food and drinks you need for any gathering size.
          </p>
          <span class="text-sm font-medium text-[var(--color-wine)] flex items-center gap-2 group-hover:gap-3 transition-all">
            Plan Party
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </span>
        </a>
        
        <!-- Tool Card 5 -->
        <a href="/tools/unit-converter" class="group card card-elevated hover:border-[var(--color-wine)] border-2 border-transparent">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[var(--color-copper)] to-orange-700 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 3v10"/>
              <path d="m12.67 5.5 8.66 5"/>
              <path d="m12.67 10.5 8.66-5"/>
              <path d="M9 17a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-2z"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--text-primary)] mb-2 group-hover:text-[var(--color-wine)] transition-colors">
            Cooking Unit Converter
          </h3>
          <p class="text-[var(--text-secondary)] mb-4">
            Convert between cups, grams, ounces, and more with ingredient-specific accuracy.
          </p>
          <span class="text-sm font-medium text-[var(--color-wine)] flex items-center gap-2 group-hover:gap-3 transition-all">
            Convert Units
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </span>
        </a>
        
        <!-- Tool Card 6 - View All -->
        <a href="/tools" class="group card border-2 border-dashed border-[var(--color-cream-dark)] hover:border-[var(--color-wine)] bg-transparent flex flex-col items-center justify-center text-center">
          <div class="w-14 h-14 rounded-full border-2 border-[var(--color-wine)] flex items-center justify-center mb-5 group-hover:bg-[var(--color-wine)] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[var(--color-wine)] group-hover:text-white transition-colors">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </div>
          <h3 class="font-display text-xl font-semibold text-[var(--color-wine)] mb-2">
            View All 40+ Tools
          </h3>
          <p class="text-[var(--text-muted)]">
            Explore our complete collection
          </p>
        </a>
      </div>
    </div>
  </section>
  
  <!-- How It Works Section -->
  <section class="py-20 bg-[var(--color-cream)]">
    <div class="container">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <span class="badge badge-sage mb-4">How It Works</span>
        <h2 class="text-display text-[var(--text-primary)] mb-4">
          Culinary Science Made Simple
        </h2>
        <p class="text-lg text-[var(--text-secondary)]">
          Our tools leverage food science research to help you create harmonious flavor combinations.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-[var(--color-wine)] text-white text-2xl font-display font-semibold flex items-center justify-center mx-auto mb-6 shadow-[var(--shadow-glow-wine)]">
            1
          </div>
          <h3 class="font-display text-xl font-semibold mb-3">Select Your Ingredient</h3>
          <p class="text-[var(--text-secondary)]">
            Search from our database of 300+ ingredients, from proteins to herbs to spices.
          </p>
        </div>
        
        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-[var(--color-wine)] text-white text-2xl font-display font-semibold flex items-center justify-center mx-auto mb-6 shadow-[var(--shadow-glow-wine)]">
            2
          </div>
          <h3 class="font-display text-xl font-semibold mb-3">Discover Pairings</h3>
          <p class="text-[var(--text-secondary)]">
            Our algorithm analyzes aromatic compounds to find both classic and unexpected matches.
          </p>
        </div>
        
        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-[var(--color-wine)] text-white text-2xl font-display font-semibold flex items-center justify-center mx-auto mb-6 shadow-[var(--shadow-glow-wine)]">
            3
          </div>
          <h3 class="font-display text-xl font-semibold mb-3">Create & Share</h3>
          <p class="text-[var(--text-secondary)]">
            Build your perfect dish and share your culinary creations with friends and family.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-[var(--color-charcoal)] text-white relative overflow-hidden">
    <!-- Decorative -->
    <div class="absolute top-0 left-0 w-64 h-64 bg-[var(--color-wine)] opacity-20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-[var(--color-gold)] opacity-10 rounded-full blur-3xl"></div>
    
    <div class="container relative z-10 text-center">
      <h2 class="text-display text-3xl md:text-4xl font-semibold mb-6">
        Ready to Create <span class="text-accent text-[var(--color-gold)]">Perfect Pairings?</span>
      </h2>
      <p class="text-xl text-[var(--text-light-muted)] max-w-2xl mx-auto mb-10">
        Start exploring our collection of interactive tools and elevate your culinary creations.
      </p>
      <a href="/tools/flavor-pairing" class="btn bg-[var(--color-gold)] text-[var(--color-charcoal)] text-lg px-10 py-5 hover:bg-[var(--color-gold-muted)] shadow-[var(--shadow-glow-gold)]">
        Start Pairing Now
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"/>
          <path d="m12 5 7 7-7 7"/>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Ensure animations work */
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .stagger-1 { animation-delay: 0.1s; }
  .stagger-2 { animation-delay: 0.2s; }
  .stagger-3 { animation-delay: 0.3s; }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes pulse-soft {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.2; }
  }
  
  .animate-pulse-soft {
    animation: pulse-soft 3s ease-in-out infinite;
  }
</style>
