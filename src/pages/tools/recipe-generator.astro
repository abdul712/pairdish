  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How does the recipe generator work?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We ask about your mood, available time, cuisine preferences, dietary needs, and energy level. Then our algorithm matches you with recipes from our curated database that fit your criteria."
      }
    },
    {
      "@type": "Question",
      "name": "What if I don't like any suggestions?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Click 'Shuffle' to see more recipes matching your preferences, or 'Start Over' to try different criteria."
      }
    },
    {
      "@type": "Question",
      "name": "Can I save my favorite recipes?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Currently, recipes are generated fresh each time. A recipe saving feature is on our roadmap for future updates!"
      }
    },
    {
      "@type": "Question",
      "name": "Are the cooking times accurate?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Times listed are for an average home cook and include both prep and cooking. If you're new to a recipe style, add 10-15 minutes."
      }
    }
  ]
})} />

<style>
  .prose {
    color: var(--text-secondary);
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
