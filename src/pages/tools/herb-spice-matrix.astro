  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Which herbs work well together?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Mediterranean herbs like basil, oregano, thyme, and rosemary pair beautifully together. Cilantro works well with mint and parsley. Generally, herbs from the same cuisine tradition work well together."
      }
    },
    {
      "@type": "Question",
      "name": "How do I substitute fresh herbs for dried?",
      "acceptedAnswer": {
