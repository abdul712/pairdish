  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is a good glycemic index to aim for?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Aim for foods with a GI of 55 or below for most meals. These 'low-GI' foods cause a gradual rise in blood sugar. Medium-GI foods (56-69) can be eaten in moderation."
      }
    },
    {
