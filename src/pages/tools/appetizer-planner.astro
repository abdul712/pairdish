  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How many appetizers should I plan per person?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Plan 8-12 pieces per person for a cocktail party where appetizers are the main food. For pre-dinner nibbles, 4-6 pieces is sufficient. Receptions need 6-10 pieces per person."
      }
    },
    {
      "@type": "Question",
      "name": "Should I serve more hot or cold appetizers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For passed service, lean 60% hot and 40% cold. For stationed appetizers, go 40% hot and 60% cold since they're easier to keep food-safe."
      }
    },
    {
      "@type": "Question",
      "name": "How far ahead can I prep appetizers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Most appetizers can be prepped 1-2 days ahead. Dips improve with time. Items with pastry can be frozen and baked from frozen. Avoid prepping fresh herbs or cut fruit until day-of."
      }
    },
    {
      "@type": "Question",
      "name": "What's the right mix for dietary restrictions?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Plan at least 25% vegetarian options. Include 1-2 gluten-free and dairy-free options. Label everything clearly for guests with restrictions."
      }
    }
  ]
})} />

<style>
  .prose {
    color: var(--text-secondary);
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
