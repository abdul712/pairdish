  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much food do I need per person for a buffet?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Plan for 1 to 1.5 pounds of food per person total. This includes about 6 oz of protein, 4-5 oz of starches, 4 oz of vegetables/salads, and 2-3 oz of bread."
      }
    },
    {
      "@type": "Question",
      "name": "How many dishes should a buffet have?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "For 20 guests: 6-8 dishes. For 50 guests: 8-10 dishes. For 100+ guests: 10-12 dishes. Include a mix of proteins, starches, vegetables, and bread."
      }
    },
    {
      "@type": "Question",
      "name": "What's the best buffet layout order?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Start with plates, then salads, hot sides, proteins (most expensive items last), then bread and condiments. Place utensils and napkins at the end."
      }
    },
    {
      "@type": "Question",
      "name": "How do I keep buffet food at safe temperatures?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Hot foods must stay above 140¬∞F using chafing dishes. Cold foods must stay below 40¬∞F using ice. Discard food left in the danger zone (40-140¬∞F) for more than 2 hours."
      }
    }
  ]
})} />

<style>
  .prose {
    color: var(--text-secondary);
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
