    gold: { bg: 'bg-amber-50', text: 'text-amber-700', border: 'border-amber-500' },
    copper: { bg: 'bg-orange-50', text: 'text-orange-700', border: 'border-orange-500' },
    teal: { bg: 'bg-teal-50', text: 'text-teal-700', border: 'border-teal-500' },
  };
  return colors[color] || colors.wine;
};
---

<BaseLayout 
  title="All Tools"
  description="Explore our complete collection of 40+ culinary tools and calculators. From flavor pairing to recipe scaling, party planning to baking utilities."
  keywords={['cooking tools', 'recipe calculator', 'food pairing', 'kitchen utilities', 'cooking converter', 'party planner']}
>
  <!-- Hero Section -->
  <section class="py-12 md:py-16 bg-gradient-to-b from-[var(--color-parchment)] to-[var(--color-cream)]">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Title -->
        <h1 class="text-display text-[var(--text-primary)] mb-4">
          Culinary <span class="text-accent text-[var(--color-wine)]">Tools & Utilities</span>
        </h1>
        
        <!-- Description -->
        <p class="text-lg text-[var(--text-secondary)] max-w-2xl mx-auto mb-8">
          Our comprehensive suite of interactive tools helps you discover perfect pairings, 
          scale recipes with precision, and plan unforgettable gatherings.
        </p>
        
        <!-- Quick Stats -->
        <div class="flex items-center justify-center gap-8 text-sm">
          <div class="text-center">
            <span class="block text-2xl font-display font-semibold text-[var(--color-wine)]">40+</span>
            <span class="text-[var(--text-muted)]">Total Tools</span>
          </div>
          <div class="w-px h-10 bg-[var(--color-cream-dark)]"></div>
          <div class="text-center">
            <span class="block text-2xl font-display font-semibold text-[var(--color-sage)]">6</span>
            <span class="text-[var(--text-muted)]">Categories</span>
          </div>
          <div class="w-px h-10 bg-[var(--color-cream-dark)]"></div>
          <div class="text-center">
            <span class="block text-2xl font-display font-semibold text-[var(--color-gold)]">Free</span>
            <span class="text-[var(--text-muted)]">Forever</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Tools Grid by Category -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="space-y-16">
        {toolCategories.map((category) => {
          const colorClasses = getColorClasses(category.color);
          
          return (
            <div>
              {/* Category Header */}
              <div class="flex items-center gap-4 mb-6">
                <span class="text-3xl">{category.icon}</span>
                <div>
                  <h2 class="font-display text-2xl font-semibold text-[var(--text-primary)]">
                    {category.name}
                  </h2>
                  <p class="text-[var(--text-muted)]">{category.description}</p>
                </div>
              </div>
              
              {/* Tools Grid */}
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {category.tools.map((tool) => (
                  <a 
                    href={tool.status === 'live' ? `/tools/${tool.slug}` : '#'}
                    class:list={[
                      "card bg-white border hover:shadow-[var(--shadow-medium)] transition-all group",
                      tool.status === 'live' && `hover:${colorClasses.border}`,
                      tool.status !== 'live' && "opacity-75 cursor-not-allowed"
                    ]}
                  >
                    <div class="flex items-start justify-between mb-3">
                      <h3 class:list={[
                        "font-display text-lg font-semibold",
                        tool.status === 'live' 
                          ? "text-[var(--text-primary)] group-hover:text-[var(--color-wine)]" 
                          : "text-[var(--text-muted)]"
                      ]}>
                        {tool.name}
                      </h3>
                      {tool.status === 'coming-soon' && (
                        <span class="badge badge-gold text-xs">Soon</span>
                      )}
                      {tool.status === 'live' && (
                        <span class:list={["badge text-xs", colorClasses.bg, colorClasses.text]}>
                          Live
                        </span>
                      )}
                    </div>
                    <p class="text-sm text-[var(--text-secondary)]">
                      {tool.description}
                    </p>
                    {tool.status === 'live' && (
                      <span class:list={[
                        "mt-4 text-sm font-medium flex items-center gap-2 group-hover:gap-3 transition-all",
                        colorClasses.text
                      ]}>
                        Try Now
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M5 12h14"/>
                          <path d="m12 5 7 7-7 7"/>
                        </svg>
                      </span>
                    )}
                  </a>
                ))}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>
  
  <!-- Newsletter / Updates CTA -->
  <section class="py-16 bg-[var(--color-charcoal)] text-white">
    <div class="container text-center max-w-2xl mx-auto">
      <h2 class="text-display text-2xl font-semibold mb-4">
        More Tools Coming Soon
